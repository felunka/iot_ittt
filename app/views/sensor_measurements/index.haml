.card.mt-3
  %h5.card-header
    = "Measurement for #{@sensor.name}"
  .table-responsive
    %table.table
      %tr
        %th
          Value
        %th
          Time
        %th
      - @sensor.sensor_measurements.each do |measurement|
        %tr
          %td
            = measurement.value
          %td
            = I18n.l measurement.created_at
