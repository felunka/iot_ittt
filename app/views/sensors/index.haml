.card.mt-3
  %h5.card-header.d-flex.justify-content-between.align-items-center
    Sensors
    = button_to 'Add', new_sensor_path, class: 'btn btn-primary', method: :get

  .card-body
    .row.row-cols-1.row-cols-sm-2.row-cols-md-3
      - @sensors.each do |sensor|
        = render partial: 'sensor_card', locals: {sensor: sensor}
